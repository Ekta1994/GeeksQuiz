{
	"manifest_version": 2,
	"name":"GeeksQuiz",
	"description": "The aim of the app is to generate random quiz from the site www.geeksquiz.com . It allows the user to select any number of topics from the list provided and attempt a quiz of maximum 20 questions. A particular time will be provided to complete the quiz and score will be generated after the time expires. Also, a discuss option is provided for seeing the correct explanation.",
	"version": "1.0",
	"app": {
		"background": {
      		"scripts": ["js/background.js"]
    	},
    	"permissions": ["<all_urls>"]
	},
	"permissions": [
		"http://*/",
		"https://*/",
		"<all_urls>"
	],
	"icons": { "16": "images/logo.png", "128": "images/logo128.png" }
}